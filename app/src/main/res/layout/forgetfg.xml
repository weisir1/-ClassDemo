<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.ForgetFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/forget" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:background="#8B4B4A4A" />

    <EditText
        android:id="@+id/fgPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="100dp"
        android:maxLength="11"
        android:background="@drawable/editbg"
        android:gravity="center"
        android:hint="手机号"
        android:inputType="phone"
        android:lines="1"
        android:paddingVertical="10dp"
        android:textColor="#6B6B6B" />

    <TextView
        android:id="@+id/phonInfo"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:layout_marginHorizontal="50dp"
        android:textSize="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#A33333"
        android:text="" />
    <TextView
        android:layout_marginTop="30dp"
        android:gravity="right"
        android:layout_marginHorizontal="50dp"
        android:textSize="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#6B6B6B"
        android:text="请更改您的密码" />

    <EditText
        android:id="@+id/fgPassWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/editbg"
        android:gravity="center"
        android:hint="更改密码"
        android:inputType="textPassword"
        android:lines="1"
        android:paddingVertical="10dp"
        android:textColor="#6B6B6B" />

    <EditText
        android:id="@+id/fgSure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/editbg"
        android:gravity="center"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:lines="1"
        android:paddingVertical="10dp"
        android:textColor="#6B6B6B" />
    <TextView
        android:id="@+id/fgPassInfo"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:layout_marginHorizontal="50dp"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#A33333"
        android:text="" />
    <Button
        android:id="@+id/btnModif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:background="@drawable/btnbg"
        android:gravity="center"
        android:paddingHorizontal="35dp"
        android:paddingVertical="10dp"
        android:text="修改密码"
        android:textColor="#fff"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/main"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:text=""
        android:textColor="#6B6B6B"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/xiaHua"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="80dp"
        android:background="#8B4B4A4A" />
</LinearLayout>